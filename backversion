    let silenceThreshold = 1000; // ‰øÆÊîπ‰∏∫2ÁßíÔºåÁªôÁî®Êà∑Êõ¥Â§öÁöÑÊÄùËÄÉÊó∂Èó¥

    // DOM Elements
    const monitoringCard = document.getElementById("monitoring-card");
    const eventLogCard = document.getElementById("event-log-card");
